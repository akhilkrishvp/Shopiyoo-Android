<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lytmain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_10dp"
    android:paddingBottom="@dimen/dimen_10dp"
    android:background="@drawable/bg_bottom_border">


    <FrameLayout
        android:id="@+id/imageLayout"
        android:layout_width="@dimen/c_thumb_width"
        android:layout_height="@dimen/c_thumb_width"
        android:background="@drawable/be_grey_curved_rad_8">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imgproduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_margin="15dp" />
    </FrameLayout>


    <TextView
        android:id="@+id/txtproductname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/imgdelete"
        android:layout_toEndOf="@+id/imageLayout"
        android:text="@string/name"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/meiryo" />


    <ImageView
        android:id="@+id/imgdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:padding="5dp"
        app:srcCompat="@drawable/ic_close" />

    <LinearLayout
        android:id="@+id/lytprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtproductname"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_toEndOf="@+id/imageLayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtmeasurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:fontFamily="@font/meiryo"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/meiryo_bold"
            android:gravity="center_horizontal"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtoriginalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textColor="@color/txt_color_1"
            android:fontFamily="@font/meiryo"
            android:textSize="@dimen/txt_size" />

        <TextView
            android:id="@+id/showDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="3dp"
            android:textColor="@color/green"
            android:textSize="@dimen/txt_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytqty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lytprice"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_toEndOf="@+id/imageLayout"
        android:gravity="center">


        <ImageButton
            android:id="@+id/btnminusqty"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"
            android:background="@android:color/transparent"
            android:onClick="OnBtnClick"
            android:padding="5dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_minus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:text="@string/x"
            android:visibility="gone"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:fontFamily="@font/meiryo"
            android:textSize="@dimen/dimen_18sp"
            android:layout_margin="4dp"
            android:textColor="@color/black" />


        <ImageButton
            android:id="@+id/btnaddqty"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"
            android:background="@android:color/transparent"
            android:onClick="OnBtnClick"
            android:visibility="visible"
            android:layout_marginStart="@dimen/dimen_10dp"
            app:srcCompat="@drawable/ic_add" />
    </LinearLayout>


    <TextView
        android:id="@+id/txttotalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lytqty"
        android:layout_alignBottom="@+id/lytqty"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/meiryo_bold"
        android:text="â‚¹ 20.00"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>

