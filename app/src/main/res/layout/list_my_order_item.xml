<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/lytmain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/fNameView"
        card_view:cardCornerRadius="@dimen/dimen_10dp"
        card_view:cardElevation="3dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_16dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderIdTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:fontFamily="@font/meiryo_bold"
                android:text="Order ID #1115"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/dimen_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:fontFamily="@font/meiryo"
                android:text="Order at: 29-05-2021 05:30 PM"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/dimen_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orderIdTV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/viewDetailsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_16dp"
                android:fontFamily="@font/meiryo_bold"
                android:paddingHorizontal="@dimen/dimen_10dp"
                android:paddingVertical="6dp"
                android:text="View"
                android:textColor="@color/green_branded"
                android:textSize="@dimen/dimen_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/totalPaidTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:fontFamily="@font/meiryo"
                android:text="Paid total: â‚¹ 599.00"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/dimen_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orderDateTV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderStatusTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:fontFamily="@font/meiryo"
                android:text="Order "
                android:textColor="@color/txt_color"
                android:textSize="@dimen/dimen_14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/totalPaidTV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/orderStatusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:fontFamily="@font/meiryo_bold"
                android:text="Shipped"
                android:textColor="@color/green_branded"
                android:textSize="@dimen/dimen_14sp"
                app:layout_constraintStart_toEndOf="@+id/orderStatusTitleTV"
                app:layout_constraintTop_toBottomOf="@+id/totalPaidTV" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>


