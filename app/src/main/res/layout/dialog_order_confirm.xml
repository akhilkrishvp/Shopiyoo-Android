<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet_dialog_fragment"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/dimen_16dp"
    android:paddingBottom="@dimen/dimen_24sp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_order_amt"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:fontFamily="@font/meiryo_bold"
        android:textSize="@dimen/dimen_18sp"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lytAmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/items"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1" />

            <TextView
                android:id="@+id/tvItemTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lytDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delivery_charge1"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1"/>

            <TextView
                android:id="@+id/tvDeliveryCharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytTax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTaxPercent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tax"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1" />

            <TextView
                android:id="@+id/tvTaxAmt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/total"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1"/>

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytPromo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPromoCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/promo_applied"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1"/>

            <TextView
                android:id="@+id/tvPCAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/wallet_balance1"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1"/>

            <TextView
                android:id="@+id/tvWallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytFinalTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/final_total"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1"
                android:textSize="@dimen/mid_text"/>

            <TextView
                android:id="@+id/tvFinalTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/meiryo"
                android:textColor="@color/txt_color_1"
                android:textSize="@dimen/mid_text" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_35dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/cancel"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:background="@drawable/be_green_curved_rad_8"
            android:textColor="@color/dark_gray" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="7dp"
            android:text="@string/confirm"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:background="@drawable/bg_green_solid_curved_rad_8"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>